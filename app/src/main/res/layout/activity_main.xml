<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageVinil"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/vinilo" />


        <ImageView
            android:id="@+id/image_music_lover"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageVinil"
            android:background="@color/colorPrimary"
            android:src="@drawable/musiclovers" />


        <RelativeLayout
            android:id="@+id/layout_icon_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_music_lover"
            android:paddingLeft="@dimen/margin_left_linear_layout_icons"
            android:layout_marginBottom="@dimen/margin_bottom_top_linear_layout">

            <ImageView

                android:id="@+id/image_time"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginTop="@dimen/margin_bottom_top_linear_layout"
                android:src="@drawable/watch" />

            <TextView

                android:id="@+id/text_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_Icons_between_text"
                android:layout_toRightOf="@+id/image_time"
                android:paddingTop="@dimen/margin_bottom_top_text"
                android:text="@string/open_hours"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_information" />

            <ImageView
                android:id="@+id/image_maps"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_below="@+id/image_time"
                android:layout_marginTop="@dimen/margin_top_icons_linear_layout"
                android:src="@drawable/maps" />

            <TextView
                android:id="@+id/text_maps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_hours"
                android:layout_marginLeft="@dimen/margin_left_Icons_between_text"
                android:layout_marginTop="@dimen/margin_top_text_linear_layout"
                android:layout_toRightOf="@+id/image_maps"
                android:text="@string/text_maps"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_information" />

            <ImageView
                android:id="@+id/image_mail"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_below="@+id/image_maps"
                android:layout_marginTop="@dimen/margin_top_icons_linear_layout"
                android:src="@drawable/mailicon" />

            <TextView
                android:id="@+id/text_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_maps"
                android:layout_marginLeft="@dimen/margin_left_Icons_between_text"
                android:layout_marginTop="@dimen/margin_top_text_linear_layout"

                android:layout_toRightOf="@+id/image_maps"
                android:text="@string/text_mail"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_information" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:padding="7sp"
            android:layout_below="@+id/layout_icon_info">

            <ImageView
                android:id="@+id/icon_fb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/icon_twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/icon_gplus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/googleplus" />

            <ImageView
                android:id="@+id/icon_youtube"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/youtube" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>